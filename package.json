{
  "name": "service-followup",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=2048 next dev -p 4010",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lintf": "next lint --fix",
    "elint": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "format:app": "prettier --write \"src/app/**/*.{js,jsx,ts,tsx}\"",
    "format:client": "prettier --write \"src/@Client/**/*.{js,jsx,ts,tsx}\"",
    "format:server": "prettier --write \"src/@Server/**/*.{js,jsx,ts,tsx}\"",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=./prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma && prisma generate --schema=./prisma/schema.prisma",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@lexical/html": "^0.35.0",
    "@lexical/react": "^0.35.0",
    "@lexical/rich-text": "^0.35.0",
    "@prisma/client": "^6.5.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@tailwindcss/postcss": "^4.1.1",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "cron": "^3.1.6",
    "date-fns": "^4.1.0",
    "date-fns-jalali": "^4.1.0-0",
    "framer-motion": "^12.4.7",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-http-backend": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "lexical": "^0.35.0",
    "luxon": "^3.6.1",
    "melipayamak": "^1.0.5",
    "mysql2": "^3.9.2",
    "ndui-ahrom": "0.1.49",
    "next": "15.1.7",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1",
    "react-multi-date-picker": "^4.5.2",
    "react-rating-stars-component": "^2.2.0",
    "react-sortablejs": "^6.1.4",
    "react-toastify": "^11.0.5",
    "recharts": "^2.12.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sortablejs": "^1.15.6",
    "tailwind-merge": "^3.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sortablejs": "^1.15.8",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "10.4.17",
    "cross-env": "^10.0.0",
    "daisyui": "^4.12.23",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "prisma": "^6.5.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
