  id         Int      @id @default(autoincrement())
  workflowId Int
  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  statusId   Int
  stepOrder  Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([workflowId, stepOrder])
}

